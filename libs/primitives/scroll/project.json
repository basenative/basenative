{
  "name": "primitives-scroll",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/primitives/scroll/src",
  "prefix": "lib",
  "projectType": "library",

  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/primitives/scroll/ng-package.json",
        "tsConfig": "libs/primitives/scroll/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/primitives/scroll/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/primitives/scroll/jest.config.cts",
        "tsConfig": "libs/primitives/scroll/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
