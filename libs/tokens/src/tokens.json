    "primary": {
      "$value": "oklch(65% 0.22 260)",
      "$type": "color"
    },
    "surface": {
      "base": {
        "$value": "oklch(15% 0.02 260)",
        "$type": "color",
        "$comment": "Dark theme base"
      },
      "glass": {
        "$value": "oklch(15% 0.02 260 / 0.6)",
        "$type": "color"
      },
      "panel": {
        "$value": "oklch(20% 0.03 260 / 0.7)",
