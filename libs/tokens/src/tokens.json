      }
    },
    "text": {
      "main": {
        "$value": "oklch(98% 0 0)",
        "$type": "color"
      },
      "muted": {
        "$value": "oklch(70% 0.05 260)",
        "$type": "color"
      }
    },
    "border": {
      "glass": {
        "$value": "oklch(100% 0 0 / 0.1)",
        "$type": "color"
      }
    },
    "pattern": {
      "dots": {
        "$value": "oklch(85% 0.02 260 / 0.2)",
        "$type": "color",
        "$comment": "Used for background grids"
      }
    },
    "syntax": {
      "bg": { "$value": "#1e1e1e", "$type": "color" },
      "text": { "$value": "#d4d4d4", "$type": "color" },
      "comment": { "$value": "#6a9955", "$type": "color" },
