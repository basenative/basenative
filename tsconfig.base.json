      "@basenative/tokens": ["libs/tokens/src/index.ts"],
      "@basenative/primitives/anchor": ["libs/primitives/anchor/src/index.ts"],
      "@basenative/primitives/dialog": ["libs/primitives/dialog/src/index.ts"],
      "@basenative/primitives/focus": ["libs/primitives/focus/src/index.ts"],
      "@basenative/primitives/portal": ["libs/primitives/portal/src/index.ts"],
      "@basenative/primitives/scroll": ["libs/primitives/scroll/src/index.ts"],
      "@basenative/primitives/a11y": ["libs/primitives/a11y/src/index.ts"],
      "@basenative/forms": ["libs/forms/src/index.ts"],
      "@basenative/layout": ["libs/layout/src/index.ts"],
      "@basenative/navigation": ["libs/navigation/src/index.ts"],
      "@basenative/data": ["libs/data/src/index.ts"],
      "@basenative/feedback": ["libs/feedback/src/index.ts"],
      "@basenative/docs": ["libs/docs/src/index.ts"],
      "@basenative/ui/glass": ["libs/ui/glass/src/index.ts"],
