{
  "name": "greenput-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/greenput-api/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx esbuild apps/greenput-api/src/index.ts --bundle --format=esm --outfile=dist/apps/greenput-api/index.js --platform=neutral"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx wrangler dev --config apps/greenput-api/wrangler.toml"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx wrangler deploy --config apps/greenput-api/wrangler.toml"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/greenput-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/greenput-api/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:api", "scope:greenput"]
}
